<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itay.finci.org.periodictable.GameActivityFragment"
    tools:showIn="@layout/activity_game">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/tvTheGiven"
        android:layout_below="@+id/tvInSecondTry"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvInSecondTry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/tvHowFar" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDontSeccede"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tvInSecondTry"
        android:layout_toRightOf="@+id/tvTheGiven"
        android:layout_toEndOf="@+id/tvTheGiven" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/tvInSecondTry"
        android:layout_below="@+id/tvInFirstTry"
        android:layout_alignLeft="@+id/tvDontSeccede"
        android:layout_alignStart="@+id/tvDontSeccede" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:id="@+id/tvInFirstTry"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvInSecondTry"
        android:layout_alignStart="@+id/tvInSecondTry" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btOption1"
        android:textAllCaps="false"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/tvTheGiven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btOption2"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/btOption1"
        android:layout_alignBottom="@+id/btOption1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btOption3"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/btOption2"
        android:layout_alignBottom="@+id/btOption2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
